{
	"name": "cjp-linter",
	"displayName": "cjp-linter",
	"description": "c/c++, java, python linter",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"publisher": "vscode-samples",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:c",
		"onLanguage:cpp",
		"onLanguage:python",
		"onLanguage:java",
		"onCommand:cjp-linter.appendNewPattern"
	],
	"main": "./client/out/extension",
	"contributes": {
		"commands": [
			{
				"command": "cjp-linter.appendNewPattern",
				"title": "Append New Pattern to Pattern List"
			}
		],
		"configuration": {
			"type": "object",
			"title": "CJP Linter configuration",
			"properties": {
				"cjpLinter.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"cjpLinter.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@types/lodash": "^4.14.170",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"@typescript-eslint/parser": "^5.19.0",
		"vscode-linter-api": "github:fnando/vscode-linter-api",
		"eslint": "^8.13.0",
		"mocha": "^9.2.1",
		"typescript": "^4.7.2"
	},
	"dependencies": {
		"lodash": "^4.17.21"
	}
}
